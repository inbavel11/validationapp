<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape>
            <solid android:color="#FF9800"/> <!-- Pressed state color -->
            <corners android:radius="10dp"/>
        </shape>
    </item>
    <item>
        <shape>
            <solid android:color="#E9E9E9"/> <!-- Normal state color -->
            <corners android:radius="10dp"/>
        </shape>
    </item>
</selector>
